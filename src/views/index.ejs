<!-- archivos html que se le puede meter js -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>

    <!-- comienza formulario -->
    <div class="container">
        <div class="col-md-6">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <label for="Cliente" class="form-label">Cliente</label>
                            <input type="text" name="nombre" id="nombre" placeholder="Nombre" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="Apellido" class="form-label">Apellido</label>
                            <input type="text" name="apellido" id="apellido" placeholder="Nombre" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="Telefono" class="form-label">Telefono</label>
                            <input type="text" name="telefono" id="telefono" placeholder="Telefono" class="form-control">
                        </div>
                        <button class="btn btn-primary">Registrar</button>
                        <button class="btn btn-primary">Actualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Telefono</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < datos.length; i++){  %>
                    <tr>
                        <td><%= i+1  %></td>
                        <td><%= datos[i]._id  %></td>
                        <td><%= datos[i].nombre  %></td>
                        <td><%= datos[i].apellido  %></td>
                        <td><%= datos[i].telefono  %></td>
                        <td>
                            <!--<a class="btn btn-primary" href="/del/<%= datos[i].id %>">Eliminar</a>-->
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= datos[i]._id %>">
                                ELIMINAR
                            </button>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal<%= datos[i]._id %>">
                                ACTUALIZAR
                            </button>
                            

<!-- Modal -->
<div class="modal fade" id="exampleModal<%= datos[i]._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Esta seguro que quiere borrar este campo?  </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <a href="/del/<%=datos[i]._id %>" class="btn btn-primary">Confirmar</a>
        </div>
    </div>
    </div>
</div>


<!-- Modal de actualizacion-->
<div class="modal fade" id="editModal<%= datos[i]._id %>" tabindex="-1" aria-labelledby="editModalLabel<%= datos[i]._id %>" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel<%= datos[i]._id %>">Editar Registro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/upd/<%= datos[i]._id %>" method="post">
                    <div class="form-group">
                        <label for="Cliente" class="form-label">Cliente</label>
                        <input type="text" name="nombre" id="nombre" placeholder="Nombre" class="form-control" value="<%= datos[i].nombre %>">
                    </div>
                    <div class="form-group">
                        <label for="Apellido" class="form-label">Apellido</label>
                        <input type="text" name="apellido" id="apellido" placeholder="Apellido" class="form-control" value="<%= datos[i].apellido %>">
                    </div>
                    <div class="form-group">
                        <label for="Telefono" class="form-label">Telefono</label>
                        <input type="text" name="telefono" id="telefono" placeholder="Telefono" class="form-control" value="<%= datos[i].telefono %>">
                    </div>
                    <button class="btn btn-primary">Actualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>



                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>